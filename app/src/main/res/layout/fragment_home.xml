<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@id/layout_loading"
            layout="@layout/layout_loading_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <include
            android:id="@id/layout_error_no_internet"
            layout="@layout/layout_error_no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <include
            android:id="@id/layout_error_loading_data"
            layout="@layout/layout_error_loading_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

        <include
            android:id="@id/layout_content"
            layout="@layout/fragment_home_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible" />

    </FrameLayout>
</FrameLayout>