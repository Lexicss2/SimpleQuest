<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application themes -->
    <style name="BaseAppTheme.Default" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="AppTheme.Default" parent="@style/BaseAppTheme.Default">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- alert dialog -->
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
        <item name="android:listDivider">@null</item>
        <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>


    <style name="AppTheme.AlertDialog.AllButtonsSet" parent="@style/AppTheme.AlertDialog">

    </style>

    <style name="AppTheme.Button.Base" parent="">
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.Button.Base.Start" parent="AppTheme.Button.Base">
        <item name="android:text">@string/home_start_tracking</item>
        <item name="android:textColor">@color/colorBgStartButton</item>
        <item name="android:background">@drawable/shape_button_start</item>
    </style>

    <style name="AppTheme.Button.Base.Stop" parent="AppTheme.Button.Base">
        <item name="android:text">@string/home_stop_tracking</item>
        <item name="android:textColor">@color/colorBgStopButton</item>
        <item name="android:background">@drawable/shape_button_stop</item>
    </style>

    <style name="AppTheme.Button.Base.Pause" parent="AppTheme.Button.Base">
        <item name="android:text">@string/home_pause_tracking</item>
        <item name="android:textColor">@color/colorBgPauseButton</item>
        <item name="android:background">@drawable/shape_button_pause</item>
    </style>

    <style name="AppTheme.Button.Base.Resume" parent="AppTheme.Button.Base">
        <item name="android:text">@string/home_pause_tracking</item>
        <item name="android:textColor">@color/colorBgResumeButton</item>
        <item name="android:background">@drawable/shape_button_resume</item>
    </style>

    <style name="AppTheme.Text.ExtraSmall" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.ExtraSmall.Red" parent="AppTheme.Text.ExtraSmall">
        <item name="android:textColor">@color/colorSimpleRed</item>
    </style>

    <style name="AppTheme.Text.Small" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.Small.Red" parent="AppTheme.Text.Small">
        <item name="android:textColor">@color/colorSimpleRed</item>
    </style>

    <style name="AppTheme.Text.Small.DarkBlue" parent="AppTheme.Text.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Text.Small.White" parent="AppTheme.Text.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Normal" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Text.Normal.DarkBlue" parent="AppTheme.Text.Normal">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Text.Normal.White" parent="AppTheme.Text.Normal">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Large" parent="">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.ExtraLarge" parent="">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Text.Large.Black" parent="">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorSimpleBlack</item>
    </style>

</resources>
